<div class="card">
  <%= form_for :event_location_track, url: event_location_tracks_path(id: event), method: 'post', remote: true, html: {id: 'event-location-track-form'} do |f| %>
  <h5 class="card-header">Create Track</h5>
  <div class="card-body">
    <p>
      <small>Create a new track for the event (there could be just one track too!)</small>

    </p>
    <div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit "Create Track", class: 'btn btn-outline-info' %>
      </div>


    </div>

  </div>

  <% end %>
</div>
