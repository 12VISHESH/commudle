<div id="event-data-form-entity-response-group-rsvp-email">


  <h3>Form Set: <%= @edfeg.name %></h3>
  <h4>Event: <%= @event.name %></h4>

  <% if @force %>
  <p>RSVP emails will be sent to all the shortlisted registrations</p>
  <% else %>
  <p>RSVP emails will be sent to the remaining shortlisted registrations</p>
  <% end %>


  <div class="email-format-container">
    <%= form_with url: send_event_data_form_entity_group_rsvp_email_event_communication_mailers_path(event_data_form_entity_group: @edfeg), method: :post, remote: true do |f| %>
    <h5>Subject and Any Specific Message to Embed</h5>
    <fieldset>
      <div class="field email-subject">
        <%= f.label :subject %>
        <%= f.text_field :subject, value: "#{@event.kommunity.name} :: #{@event.name} :: RSVP", required: true %>
        <%= f.hidden_field :force, value: @force %>
      </div>
      <div class="field">
        <%= f.label :message, "Add Some Message (Optional)" %>
        <%= f.text_area :message, :class => "tinymce editor", :rows => 3, :cols => 50 %>

      </div>
      <%= f.submit "Send Email" %>

    </fieldset>

    <% end %>




  </div>


</div>