<% content_for :page_title do %>
<%= @kommunity.name %> | Events
<% end %>
<h4 class="bg-info text-center text-white p-2"><%= @kommunity.name %></h4>

<% if allowed_view?(:events, :create) %>
<div class="card mt-3 p-3 d-flex">
  <%=  link_to new_event_path do %>
    <span><i class="fas fa-plus-circle fa-1x text-success"></i> Create Event</span>
  <% end %>
</div>
<% end %>

<div>
  <% @events.each do |event| %>
  <div class="card event">


    <div class="card-body">
      <h5 class="card-header card-title"><%= event.name %></h5>

      <%= render 'events/event_time_display', event: event %>

      <div class="card-text mt-3">
        <div class="description">
          <%= event.description.html_safe %>
        </div>

        <div>
          <%= render 'events/locations_tracks_slots', event: event, track_slot: @track_slot, event_location_track: @event_location_track %>
        </div>


      </div>


    </div>
    <% if !event.open_forms.empty? %>
    <div class="card-footer text-muted">
      <ul class="list-group list-group-flush">
        <% event.open_forms.each do |dfe| %>
        <li class="list-group-item">
          <p><%= dfe.entity.name %></p>
          <div>
            <%= link_to dfe.name.titlecase, fill_form_response_path(kommunity: event.kommunity, data_form_entity_id: dfe), class: "btn btn-primary" %>
          </div>

        </li>
        <% end %>

      </ul>

    </div>
    <% end %>

  </div>

  <% end %>

</div>



