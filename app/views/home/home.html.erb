<% content_for :page_title do %>
  Upcoming Events
<% end %>

<section id="home-home">

  <div class="row justify-content-center">

    <div class="col-md-8 ">

        <% @upcoming_events.each do |event| %>

          <div class="card event">
            <h5 class="card-header"><%= event.kommunity.name %></h5>

            <div class="card-body">
              <%= link_to "", event_path(event.kommunity, event), class: "clickable-card" %>
              <h5 class="card-title"><%= event.name %></h5>

              <div class="event-timing">
                <% if event.start_time.to_date != event.end_time.to_date %>
                <span>
                  <span>
                    <%= event.start_time.strftime("%d-%b-%Y") %></span> <span class="badge badge-secondary badge-pill"> <%= event.start_time.strftime('%I:%M %p') %></span> -

                  <span><%= event.end_time.strftime("%d-%b-%Y") %></span> <span class="badge badge-secondary badge-pill"> <%= event.end_time.strftime('%I:%M %p') %></span>

                </span>
                <% else %>
                <span>
                  <span><%= event.start_time.strftime("%d-%b-%Y") %></span> <span class="badge badge-secondary badge-pill"> <%= event.start_time.strftime('%I:%M %p') %> To <%= event.end_time.strftime('%I:%M %p') %></span>
                </span>
                <% end %>

              </div>

              <div class="card-text">
                <div class="description">
                  <%= event.description.html_safe %>
                </div>




              </div>


            </div>
            <% if !event.open_forms.empty? %>
            <div class="card-footer text-muted">
              <ul class="list-group list-group-flush">
                <% event.open_forms.each do |dfe| %>
                <li class="list-group-item">
                  <p><%= dfe.entity.name %></p>
                  <div>
                    <%= link_to dfe.name.titlecase, fill_form_response_path(kommunity: event.kommunity, data_form_entity_id: dfe), class: "btn btn-primary" %>
                  </div>

                </li>
                <% end %>

              </ul>

            </div>
            <% end %>

          </div>


        <% end %>
      </ul>

    </div>

  </div>

</section>